{
  "name": "context-logger",
  "description": "Logger with context",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "start:dev": "ts-node src/index.ts",
    "test": "jest --testMatch='**/test/**/*.test.ts'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsup",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
